<div>
    <div>
        <h1>A&W User Registration</h1>
    </div>
    <div>
        <form>
            <div>
                <label for="username">Enter a username:</label>
                <input type="text" name="username" id="username" />
            </div>
            <div>
                <label for="password">Enter a password:</label>
                <input type="password" name="password" id="password" />
            </div>
            <div>
                <label for="verifypassword">Verify your password:</label>
                <input type="password" name="verifypassword" id="verifypassword" />
            </div>
            <div>
                <label for="email">Enter your email:</label>
                <input type="email" name="email" id="email" />
            </div>
            <div>
                <label for="street_address">Enter your street address:</label>
                <input type="text" name="street_address" id="street_address" />
            </div>
            <div>
                <label for="province">Enter your province:</label>
                <input type="text" name="province" id="province" />
            </div>
            <div>
                <input type="submit" value="Sign Up" />
            </div>
        </form>
    </div>
</div>